{
  "compilerOptions": {
    "baseUrl": "./src",
    "rootDir": "./",
    "target": "es2017",
    "module": "es2015",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "declaration": true,
    "jsx": "react",
    "strictNullChecks": true,
    "noImplicitAny": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "noEmitHelpers": true,
    "importHelpers": true,
  },
  "include": ["./src/**/*"]
}